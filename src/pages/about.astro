---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

const identity = {
  firstName: "Mark",
  country: "🇷🇺",
  occupation: "Developer",
  hobbies: ["programming 📖", "playing videogames 👀", "listening to podcasts 🧏"],
};

const fe_skills = ["Typescript", "React", "Next", "Astro",];
const happy = ['I am happy to be learning Astro!', 'Positive Mental Attitude 🏄', 'I ❤️ JS']

---
<BaseLayout pageTitle='About me'>
  <p>Here are a few facts about me:</p>
  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
    <li>My hobbies are {identity.hobbies.join(', ')}</li>
    <li>{happy[Math.floor(Math.random() * happy.length)]}</li>
  </ul>
  <p>My frontend skills are:</p>
  <ul>
    {fe_skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
</BaseLayout>

